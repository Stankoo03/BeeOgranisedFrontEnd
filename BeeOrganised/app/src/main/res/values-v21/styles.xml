<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget.Theme.BeeOrganised.ActionBar.Fullscreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>

    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Spinner1" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/DateColor</item>
        <item name="android:fontFamily">@font/brojke</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>
    <style name="Spinner2" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/DateColor</item>
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
    <item name="android:divider">@color/DarkBrwn</item>
        <item name="android:dividerHeight">1dp</item></style>
</resources>