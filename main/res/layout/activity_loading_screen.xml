<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingScreen"
    android:background="@drawable/ic_loading_base"
    >

    <ImageView
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:layout_marginTop="120sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_icon" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dole"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_loading_down" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gore"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_loading_up" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="60sp"
        android:background="@drawable/ic_load_hexa" />

</RelativeLayout>

